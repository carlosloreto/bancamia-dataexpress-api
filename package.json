{
  "name": "bancamia-dataexpress-api",
  "version": "1.0.0",
  "description": "API Express para Bancamia DataExpress",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "build": "npm run build:check",
    "build:check": "node --check src/index.js && node --check src/app.js",
    "diagnostico": "npm run build:check && npm audit && echo Diagnostico completado",
    "test": "node tests/auth.test.js",
    "test:integration": "node tests/integration.auth.test.js",
    "test:solicitudes": "node tests/solicitudes.test.js",
    "test:pdf": "node tests/pdf-generator.test.js",
    "test:pdf-storage": "node tests/pdf-storage.test.js",
    "test:quick": "node tests/quick.test.js",
    "test:security": "node tests/security.test.js",
    "seed": "node src/scripts/seed-firestore.js",
    "seed:force": "FORCE_SEED=true node src/scripts/seed-firestore.js",
    "clear": "node src/scripts/clear-firestore.js",
    "clear:force": "FORCE_CLEAR=true node src/scripts/clear-firestore.js"
  },
  "keywords": [
    "express",
    "api",
    "rest",
    "bancamia"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "firebase": "^12.5.0",
    "firebase-admin": "^13.5.0",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "node-fetch": "^2.7.0",
    "pdfkit": "^0.17.2"
  },
  "devDependencies": {
    "nodemon": "^3.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
